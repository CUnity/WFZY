/* 订单 */
.function{
  width: 100%;
  display: flex;
  flex-direction: column;
  margin-top:10rpx;
}
.order{
  width: 100%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: #FFF;
  border-bottom:2px rgb(250, 250, 250) solid;
}
.all_order{
  width: 70%;
  height: 80rpx;
  line-height: 80rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
}
.order_check{
  width: 30%;
  height: 80rpx;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.order_image{
  width:30rpx;
  height:30rpx;
}
/* 应用一 */
.function_first{
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  align-items: center;
  background: #FFF;
}
.one{
  width: 140rpx;
  height: 130rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background: #FFF;
}
.one_image{
  width: 60rpx;
  height: 60rpx;
}
/* 官方客服、设置 */
.function_second{
  width: 100%;
  display: flex;
  flex-direction: column;
}
.two{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  background: #FFF;
  margin-top:5px;
}
.service{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  font-size: 30rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.set{
  width: 70%;
  height: 90rpx;
  line-height: 90rpx;
  padding: 0 20rpx;
  font-size: 33rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.set_check{
  width: 30%;
  height: 90rpx;
  font-size: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.set_arrow{
  width:30rpx;
  height:30rpx;
}
.set_image{
  width: 50rpx;
  height: 50rpx;
}