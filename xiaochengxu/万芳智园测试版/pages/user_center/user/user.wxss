/* 默认点击态样式 */
.navigator-hover {
    color:#999;
}
/* 顶部 */
.top{
  width: 100%;
  height: 280rpx;
  background: rgb(250, 250, 250);
  margin-top:8rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  position: relative;
}
.top_background{
  width:96%;
  height: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  border-radius: 12px;
  z-index:1;
  position: absolute;
}
/* 头像 */
.top_left{
  width: 50%;
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.none{
  width:150rpx;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  border-radius: 50%;
  background: rgb(250, 250, 250);
}
.image{
  width: 100%;
  height: 80%;
  border-radius: 50%;
}
/* 用户名 */
.top_middle{
  width:50%;
  height: 100%;
  padding-left: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}
.label{
  width:100rpx;
  height: 35rpx;
  padding: 0 20rpx;
  line-height: 35rpx;
  font-size: 25rpx;
  text-align: center;
  border: 1rpx rgb(203, 203, 203) solid;
  border-radius: 42px;
  color:#999;
}
.user_name{
  width: 250rpx;
  height: 60rpx;
  padding:1rpx 10rpx;
  font-size: 30rpx;
  font-weight: bold;
  line-height: 60rpx;
  display: flex;
  flex-direction: row;
  justify-content: start;
  overflow: hidden;
  text-overflow:ellipsis;
  white-space: nowrap; 
}
